{
	"private": true,
	"scripts": {
		"build": "npm run clean && npm run build:vite && prettier 'dist/**/*.html' --write --ignore-path null",
		"build:vite": "vite build",
		"clean": "rimraf dist",
		"dev": "vite --host",
		"format": "prettier . --write",
		"lint": "npm run lint:eslint && npm run lint:style",
		"lint:eslint": "eslint './src/**/*.{js,jsx}'",
		"lint:style": "stylelint './src/**/*.{css,scss,sass,less,styl,vue,svelte}'",
		"serve": "vite preview --host"
	},
	"dependencies": {
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-regexp": "^2.6.0",
		"sanitize.css": "^13.0.0",
		"terser": "^5.31.6",
		"vite-plugin-eslint": "^1.8.1"
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"autoprefixer": "^10.4.20",
		"chalk": "^4.1.2",
		"postcss": "^8.4.45",
		"prettier": "^3.3.3",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-package": "^1.4.0",
		"rimraf": "^6.0.1",
		"sass": "^1.78.0",
		"stylelint": "^15.11.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"stylelint-order": "^6.0.4",
		"vite": "^5.4.3",
		"vite-plugin-checker": "^0.8.0"
	},
	"browserslist": "defaults, not ie 11, not Firefox ESR",
	"volta": {
		"node": "20.15.0"
	}
}
